<h1><%= @title %></h1>

<section id="posts">
    <h3>Recent posts</h3>
    <% @posts.each do |post| %>
      <h5><%= link_to post.title, edit_admin_post_path(post) %></h5>
      <p class="date"><%= format_date(post.created_at, true) %></p>
      <p><%= truncate(post.body, :length => 150) %></p>
    <% end %>
</section>