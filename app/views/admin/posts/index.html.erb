<h1><%= @title %></h1>

<% if @posts.any? %>
<table class="posts" summary="List of posts">
  <tr>
    <th><%# View Link %></th>
    <th>Title</th>
    <th>Body</th>
    <th>Created on:</th>
    <th>Updated on:</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><%= link_to "View", admin_post_path(post) %></td>
    <% if admin? || current_user.id == post.user_id %>
      <td><%= link_to truncate(post.title), edit_admin_post_path(post) %></td>
    <% else %>
      <td><%= truncate(post.title) %></td>
    <% end %>
    <td><%= truncate(post.body) %></td>
    <td><%= format_date(post.created_at, true) %></td>
    <td><%= format_date(post.updated_at, true) %></td>
  </tr>
  <% end %>
</table>

<%= will_paginate @posts %>
<% else %>
<p>There are no posts yet.</p>
<% end %>